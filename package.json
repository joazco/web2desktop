{
  "name": "web2desktop",
  "productName": "web2desktop",
  "version": "1.0.0",
  "description": "Web2Desktop transforms any already built website or web application into a native desktop application for Windows, macOS, and Linux.",
  "main": "./dist/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "tsc -p .",
    "dev": "concurrently -k \"npm:dev:ts\" \"npm:dev:electron\"",
    "dev:ts": "tsc -w -p .",
    "dev:electron": "wait-on dist/main.js && nodemon --delay 200ms --watch dist --watch www --watch splash --watch demo --ext js,json,html,css,png,jpg,svg --signal SIGTERM --exec \"electron-forge start\"",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "make:demo": "rimraf \"www/*\" && cpy \"demo/**\" www --parents && npm run make",
    "publish": "npm run build && electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "Jordan AZOULAY",
    "email": "jazoulay@joazco.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^9.2.1",
    "cpy-cli": "^5.0.0",
    "electron": "39.2.7",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "rimraf": "^6.0.1",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "steamworks.js": "^0.4.0"
  }
}
